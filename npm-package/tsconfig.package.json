{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "incremental": false,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": "../src",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../src/**/*.test.ts"
  ]
}
